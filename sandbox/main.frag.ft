#include "fluent.hlsl"

cbuf(ubo, 0)
{
    float4 color;
};

sampler(u_sampler, 1);
texture2D(float4, u_texture, 2);

struct Input
{
	float2 tex_coord : TEXCOORD0;
};

float4 main(Input stage_input)
{
	float4 t = float4(lerp(u_texture.Sample(u_sampler, stage_input.tex_coord).rgb, color.rgb, 0.5), 1.0);
    return t;
}
