#include "fluent.hlsl"

struct Input
{
    uint vertex_index : SV_VertexID;
};

struct Output
{
    float4 position : SV_Position;
    float2 tex_coord : TEXCOORD0;
};

Output main(Input stage_input)
{
    int vertex_index = int(stage_input.vertex_index);
    Output stage_output;
	stage_output.tex_coord = float2(float(vertex_index & 2), float(vertex_index & 1) * 2);
	stage_output.position  = float4(stage_output.tex_coord * 0.3 - 0.3, 0, 1);
    return stage_output;
}
